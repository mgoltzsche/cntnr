FROM alpine:3.7

ENV "MYVARX"="entrypoint.sh"
ENV "MYVARY"="pval"

COPY dir="./ctx" "entrypoint.sh" "/dest" 0:0
COPY dir="./ctx" "/entrypoint.sh" "entrypoint.sh" 0:0
COPY dir="./ctx" "/entrypoint.sh" "/dest" 0:0
COPY image="alpine:3.7" "etc/hosts" "/dest" 0:0

EXPOSE 80 443/tcp

LABEL "entrypoint.sh"="pval"

STOPSIGNAL SIGTERM

USER 0:0

VOLUME "pval" "/data"

WORKDIR /data
WORKDIR /

RUN "argd"="entrypoint.sh" "argimg"="alpine:3.7" "argp"="pval" "argstop"="SIGTERM" "argusr"="0:0" "argvol"="/data" "port1"="80" "port2"="443/tcp" "/bin/sh" "-c" "echo $argd"

ENTRYPOINT "/bin/sh" "-c" "echo $argd"
ENTRYPOINT "/bin/echo" "$argd"