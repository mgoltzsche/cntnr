FROM alpine:3.7

ARG argd entrypoint.sh
ARG argp
ARG argusr 0:0
ARG argimg alpine:3.7
ARG argvol /data
ARG port1 80
ARG port2 443/tcp

ENV MYVARX ${argd}
ENV MYVARY ${argp}

COPY $argd /dest
COPY /entrypoint.sh $argd
COPY --chown=$argusr /entrypoint.sh /dest
COPY --from=$argimg etc/hosts /dest

EXPOSE $port1 $port2

LABEL $argd=$argp

ARG argstop SIGTERM
STOPSIGNAL $argstop

USER $argusr

VOLUME $argp $argvol

WORKDIR $argvol
WORKDIR /

RUN echo $argd

# Should not substitute
ENTRYPOINT echo $argd
ENTRYPOINT [ "/bin/echo", "$argd" ]

# ASSERT CFG /config/StopSignal=SIGTERM